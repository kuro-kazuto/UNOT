<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/second_gradient"
    tools:context=".Dashboard_admin">

    <ImageView
        android:id="@+id/net_big"
        android:layout_width="550dp"
        android:layout_height="399dp"
        android:layout_marginTop="456dp"
        android:gravity="center"
        android:orientation="vertical"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dashboardAdmin"
        android:layout_width="323dp"
        android:layout_height="27dp"
        android:gravity="center"
        android:text="DASHBOARD ADMIN"
        android:textColor="#C10000"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spasi1"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/spasi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        tools:ignore="HardcodedText,MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
       />
    <Button
        android:id="@+id/btn_remote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/dashboardAdmin"
        android:layout_marginTop="100dp"
        android:text="Remote"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn_nilai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btn_remote"
        android:layout_marginTop="100dp"
        android:text="nilai"
        android:layout_margin="10dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>