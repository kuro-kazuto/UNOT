<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/third_gradient"
    tools:context=".UserSide.FragmentDashboard">


    <LinearLayout
        android:id="@+id/quotesforuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/Linear_dashboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/userimg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ico_square_mini"
            app:layout_constraintBottom_toBottomOf="@+id/quotesforuser"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/greeting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Halo User,"
                android:textColor="@color/white"
                android:textSize="25dp" />

            <TextView
                android:id="@+id/greeting2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Halo User,"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/quotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="Siapkah Kamu Untuk Berkarya Hari Ini?"
                android:textColor="@color/white"
                android:textSize="15dp" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/Linear_dashboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/rounded_home"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:id="@+id/scroll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/Linear_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/title_quiz"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pilih Quiz Yang Ingin Dikerjakan"
                    android:textSize="18sp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@drawable/rounded_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/quiz_button"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/rounded_content">

                            <ImageView
                                android:id="@+id/TOEFL"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="20dp"
                                android:src="@mipmap/ico_circle_mini" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/TOEFL"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:gravity="center"
                                android:textSize="11sp"
                                android:textColor="@color/black"
                                android:text="TOEFL"/>

                            <ImageView
                                android:id="@+id/button1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/TOEFL"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="25dp"
                                android:src="@mipmap/untirta"/>

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/button1"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="20dp"
                                android:gravity="center"
                                android:textSize="11sp"
                                android:textColor="@color/black"
                                android:text="Button 1"/>

                            <ImageView
                                android:id="@+id/button2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="20dp"
                                android:layout_toEndOf="@id/TOEFL"
                                android:src="@mipmap/launcher_ico" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/button2"
                                android:layout_toEndOf="@id/TOEFL"
                                android:layout_marginStart="25dp"
                                android:gravity="center"
                                android:textSize="11sp"
                                android:textColor="@color/black"
                                android:text="Button 2"/>

                            <ImageView
                                android:id="@+id/button3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/TOEFL"
                                android:layout_toEndOf="@id/button1"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="25dp"
                                android:src="@mipmap/untirta" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/button3"
                                android:layout_toEndOf="@id/button1"
                                android:layout_marginStart="25dp"
                                android:gravity="center"
                                android:textSize="11sp"
                                android:textColor="@color/black"
                                android:text="Button 3"/>

                            <ImageView
                                android:id="@+id/button4"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="20dp"
                                android:layout_toEndOf="@id/button2"
                                android:src="@mipmap/launcher_ico" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/button4"
                                android:layout_toEndOf="@id/button2"
                                android:layout_marginStart="25dp"
                                android:gravity="center"
                                android:textSize="11sp"
                                android:textColor="@color/black"
                                android:text="Button 4"/>

                            <ImageView
                                android:id="@+id/button5"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/TOEFL"
                                android:layout_toEndOf="@id/button3"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="25dp"
                                android:src="@mipmap/untirta" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/button5"
                                android:layout_toEndOf="@id/button3"
                                android:layout_marginStart="25dp"
                                android:gravity="center"
                                android:textSize="11sp"
                                android:textColor="@color/black"
                                android:text="Button 5"/>

                            <ImageView
                                android:id="@+id/button6"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="20dp"
                                android:layout_toEndOf="@id/button4"
                                android:src="@mipmap/launcher_ico" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/button6"
                                android:layout_toEndOf="@id/button4"
                                android:layout_marginStart="25dp"
                                android:gravity="center"
                                android:textSize="11sp"
                                android:textColor="@color/black"
                                android:text="Button 6"/>

                            <ImageView
                                android:id="@+id/button7"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/TOEFL"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="25dp"
                                android:layout_toEndOf="@id/button5"
                                android:src="@mipmap/untirta" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/button5"
                                android:layout_toEndOf="@id/button5"
                                android:layout_marginStart="25dp"
                                android:gravity="center"
                                android:textSize="11sp"
                                android:textColor="@color/black"
                                android:text="Button 7"/>

                            <ImageView
                                android:id="@+id/button8"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_alignParentTop="true"
                                android:layout_marginEnd="25dp"
                                android:layout_marginStart="25dp"
                                android:layout_marginTop="20dp"
                                android:layout_toEndOf="@id/button6"
                                android:src="@mipmap/launcher_ico" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/button8"
                                android:layout_toEndOf="@id/button6"
                                android:layout_marginEnd="25dp"
                                android:layout_marginStart="25dp"
                                android:gravity="center"
                                android:textSize="11sp"
                                android:textColor="@color/black"
                                android:text="Button 8"/>

                            <ImageView
                                android:id="@+id/button9"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_below="@id/TOEFL"
                                android:layout_marginStart="25dp"
                                android:layout_marginEnd="25dp"
                                android:layout_marginTop="25dp"
                                android:layout_toEndOf="@id/button7"
                                android:src="@mipmap/untirta" />

                            <TextView
                                android:layout_width="50dp"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/button9"
                                android:layout_toEndOf="@id/button7"
                                android:layout_marginStart="25dp"
                                android:layout_marginEnd="25dp"
                                android:gravity="center"
                                android:textSize="11sp"
                                android:textColor="@color/black"
                                android:text="Button 7"/>

                        </RelativeLayout>


                    </LinearLayout>


                </HorizontalScrollView>




            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>